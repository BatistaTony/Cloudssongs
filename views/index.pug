<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="style/main.css")
        script(src="JS/main.js")
        title Musicas
    body
        -if(typeof songs != 'undefined'){

        include navbar.pug
                   
            
        

       
        ul(class="songs")  
            
            -for(var x =0;x < songs.length;x++){
                -var nome = songs[x]
                -var singer = artist[x]
                -var musica = musicas[x]
                -var fonte = caminho

            li(onclick="play2('"+nome+"','"+singer+"','"+caminho+'/'+musica+"')")
                h3 #{songs[x]}
                -var info = artist[x]+", "+album[x]
                span #{info}
            button(class="btn_song")
                img(src="img/icons8_menu_2_filled_50px.png", alt="")
                a(href=`delete?repos=${caminho}&song=${musicas[x]}&user=${user}&phone=${phone}` class="btn_delete") Delete
            -}  

        div(class="player")
           
            
            h2(id='title') #{songs[0]}
            h3(id='artist') #{artist[0]}  
           
           
            ul
                li 
                    button(onclick="prev('"+caminho+"','"+musicas+"','"+songs+"','"+artist+"')") 
                        img(src="img/icons8_circled_chevron_left_50px.png", alt="")
                li 
                    button(onclick="play()")
                        img(src="img/icons8_play_button_circled_50px.png", alt="" id="tocar")
                li 
                    button(onclick="next('"+caminho+"','"+musicas+"','"+songs+"','"+artist+"')")
                        img(src="img/icons8_circled_chevron_right_50px.png", alt="")

                li(class="loop") 
                    button(onclick="loop()")
                        img(src="img/icons8_repeat_filled_50px.png", alt="" id="loop_1")

                
                
           
            
            audio(src=`${caminho}/${musicas[0]}`  id="player")
                
            -}else{
                    h1 Is empty do some upload
            -}